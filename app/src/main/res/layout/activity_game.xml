<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <import type="com.ducdungdam.dartfriends.utilities.DataBindingUtils"/>
    <variable
      name="player"
      type="com.ducdungdam.dartfriends.model.Player"/>
    <variable
      name="currentThrowIndex"
      type="java.lang.Integer"/>
    <variable
      name="points"
      type="java.lang.Integer"/>
    <variable
      name="currentRoundScore"
      type="com.ducdungdam.dartfriends.model.RoundScore"/>
  </data>
  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    android:fitsSystemWindows="true">
    <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?colorPrimaryDark"
      app:title="Game Mode: 501"
      app:titleTextColor="@color/colorSecondaryText"/>

    <ImageView
      android:id="@+id/iv_current_user"
      android:layout_width="88dp"
      android:layout_height="88dp"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:src="@drawable/circle_image"
      app:dataBindingUtilsSetImageCircle="@{player.imageSrc}"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:text='@{points == null ? "N/A" : String.valueOf(points)}'
      android:textSize="32sp"
      app:layout_constraintBottom_toTopOf="@+id/first_score"
      app:layout_constraintEnd_toStartOf="@+id/textView4"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintHorizontal_chainStyle="spread_inside"
      app:layout_constraintStart_toEndOf="@+id/iv_current_user"
      app:layout_constraintStart_toStartOf="@+id/first_score"
      app:layout_constraintTop_toTopOf="@+id/iv_current_user"
      app:layout_constraintVertical_bias="1.0"/>
    <TextView
      android:id="@+id/textView6"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:text="Up next"
      android:textAlignment="center"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/divider_vertical"
      app:layout_constraintTop_toTopOf="@+id/iv_current_user"/>
    <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="15dp"
      android:layout_marginEnd="8dp"
      android:text="ø 96.4"
      app:layout_constraintBottom_toTopOf="@+id/textView9"
      app:layout_constraintEnd_toEndOf="@+id/third_score"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/textView2"
      app:layout_constraintTop_toTopOf="@+id/textView2"
      app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
      android:id="@+id/textView9"
      android:layout_width="wrap_content"
      android:layout_height="15dp"
      android:text="∞ 24"
      app:layout_constraintBottom_toBottomOf="@+id/textView2"
      app:layout_constraintEnd_toEndOf="@+id/textView4"
      app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
      android:id="@+id/textView5"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:padding="@dimen/spacing_small"
      android:background="?colorPrimaryDark"
      android:text="@{player.name}"
      android:textAlignment="center"
      android:textColor="#fff"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="@+id/iv_current_user"
      app:layout_constraintEnd_toEndOf="@+id/iv_current_user"
      app:layout_constraintStart_toStartOf="@+id/iv_current_user"
      app:layout_constraintTop_toBottomOf="@+id/iv_current_user"/>
    <android.support.constraint.ConstraintLayout
      android:id="@+id/first_score"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginStart="8dp"
      android:alpha="0.8"
      android:background="@{currentThrowIndex == 0 ? @drawable/score_image_pressed : @drawable/score_image}"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackgroundBorderless"
      app:layout_constraintBottom_toBottomOf="@+id/textView5"
      app:layout_constraintStart_toEndOf="@+id/iv_current_user">
      <TextView
        android:id="@+id/tv_first_score"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text='@{DataBindingUtils.getScoreString(0, currentRoundScore)}'
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
      android:id="@+id/second_score"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginStart="8dp"
      android:alpha="0.8"
      android:background="@{currentThrowIndex == 1 ? @drawable/score_image_pressed : @drawable/score_image}"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackgroundBorderless"
      app:layout_constraintStart_toEndOf="@+id/first_score"
      app:layout_constraintTop_toTopOf="@+id/first_score">
      <TextView
        android:id="@+id/tv_second_score"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@{DataBindingUtils.getScoreString(1, currentRoundScore)}"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
      android:id="@+id/third_score"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginStart="8dp"
      android:alpha="0.8"
      android:background="@{currentThrowIndex == 2 ? @drawable/score_image_pressed : @drawable/score_image}"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackgroundBorderless"
      app:layout_constraintStart_toEndOf="@+id/second_score"
      app:layout_constraintTop_toTopOf="@+id/second_score">
      <TextView
        android:id="@+id/tv_third_score"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@{DataBindingUtils.getScoreString(2, currentRoundScore)}"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <View
      android:id="@+id/divider_vertical"
      android:layout_width="1dp"
      android:layout_height="0dp"
      android:layout_marginStart="8dp"
      android:background="?colorAccent"
      app:layout_constraintBottom_toBottomOf="@+id/rv_next_player"
      app:layout_constraintStart_toEndOf="@+id/third_score"
      app:layout_constraintTop_toTopOf="@+id/textView6"
      app:layout_constraintVertical_bias="0.0"/>
    <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_next_player"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="4dp"
      android:orientation="horizontal"
      app:layoutManager="android.support.v7.widget.LinearLayoutManager"
      app:layout_constraintBottom_toBottomOf="@+id/textView5"
      app:layout_constraintEnd_toEndOf="@+id/textView6"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/textView6"
      app:layout_constraintTop_toBottomOf="@+id/textView6"
      app:layout_constraintVertical_bias="0.0"/>
    <View
      android:id="@+id/divider_horizontal"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_marginTop="16dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="?colorAccent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView5"/>

    <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_scoreboard"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/divider_horizontal"
      app:layout_constraintVertical_bias="1.0"/>
    <android.support.design.widget.FloatingActionButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:visibility="invisible"
      android:src="@drawable/ic_menu"
      app:backgroundTint="@android:color/background_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  </android.support.constraint.ConstraintLayout>
</layout>